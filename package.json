{
  "name": "mind-flayer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "description": "A powerful open-source cross-platform desktop AI assistant app.",
  "author": "Soon Wang",
  "license": "MIT",
  "scripts": {
    "dev:debug": "RUST_LOG=debug tauri dev",
    "dev": "tauri dev",
    "build": "tauri build",
    "dev:frontend": "vite",
    "build:frontend": "vite build",
    "dev:sidecar": "pnpm -F sidecar dev",
    "build:sidecar": "pnpm -F sidecar build",
    "tauri": "tauri",
    "format": "pnpm \"/format:/\"",
    "test": "pnpm \"/test:/\"",
    "format:frontend": "biome format . --write",
    "check:frontend": "biome check . --write && tsc --noEmit",
    "lint:frontend": "biome lint . --write",
    "check:i18n": "tsx scripts/check-i18n.ts",
    "test:frontend": "vitest --run",
    "format:backend": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "check:backend": "cargo check --manifest-path src-tauri/Cargo.toml",
    "test:backend": "cargo test --manifest-path src-tauri/Cargo.toml",
    "release": "release-it",
    "postinstall": "lefthook install"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.23",
    "@ai-sdk/openai": "^3.0.18",
    "@ai-sdk/provider": "^3.0.5",
    "@ai-sdk/provider-utils": "^4.0.9",
    "@ai-sdk/react": "^3.0.51",
    "@lucide/lab": "^0.1.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@tanstack/react-router": "^1.156.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-os": "~2.3.2",
    "@tauri-apps/plugin-sql": "^2.3.1",
    "@tauri-apps/plugin-store": "~2.4.2",
    "ai": "^6.0.49",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "i18next": "^25.8.0",
    "lucide-react": "^0.562.0",
    "motion": "^12.29.0",
    "nanoid": "^5.1.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.3",
    "remark-math": "^6.0.0",
    "sonner": "^2.0.7",
    "streamdown": "^1.6.11",
    "tailwind-merge": "^3.4.0",
    "use-stick-to-bottom": "^1.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/types": "^20.3.1",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.4.0",
    "lefthook": "^2.0.15",
    "release-it": "^19.2.4",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "ai": "$ai",
      "@ai-sdk/anthropic": "$@ai-sdk/anthropic",
      "@ai-sdk/openai": "$@ai-sdk/openai",
      "@ai-sdk/provider": "$@ai-sdk/provider",
      "@ai-sdk/provider-utils": "$@ai-sdk/provider-utils"
    }
  }
}
