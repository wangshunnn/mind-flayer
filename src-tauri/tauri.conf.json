{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mind Flayer",
  "version": "0.1.0",
  "identifier": "com.soonwang.mindflayer",
  "build": {
    "beforeDevCommand": "pnpm dev:sidecar && pnpm dev:frontend",
    "beforeBuildCommand": "pnpm build:sidecar && pnpm build:frontend",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Mind Flayer",
        "width": 960,
        "height": 700,
        "minWidth": 440,
        "minHeight": 560,
        "titleBarStyle": "Overlay",
        "decorations": true,
        "hiddenTitle": true,
        "center": true,
        "transparent": true,
        "trafficLightPosition": {
          "x": 24,
          "y": 26
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/mind-flayer-sidecar"]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "sql": {
      "preload": ["sqlite:chats.db"],
      "scope": {
        "allowed": [
          {
            "statement": "SELECT * FROM chats ORDER BY updated_at DESC"
          },
          {
            "statement": "SELECT * FROM chats WHERE id = ?"
          },
          {
            "statement": "SELECT * FROM messages WHERE chat_id = ? ORDER BY created_at ASC"
          },
          {
            "statement": "INSERT INTO chats (id, title, created_at, updated_at) VALUES (?, ?, ?, ?)"
          },
          {
            "statement": "INSERT INTO messages (id, chat_id, role, content_json, created_at) VALUES (?, ?, ?, ?, ?)"
          },
          {
            "statement": "UPDATE chats SET title = ?, updated_at = ? WHERE id = ?"
          },
          {
            "statement": "DELETE FROM chats WHERE id = ?"
          },
          {
            "statement": "DELETE FROM messages WHERE chat_id = ?"
          }
        ]
      }
    }
  }
}
