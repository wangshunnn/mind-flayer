{
  "name": "mind-flayer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.1",
  "description": "A powerful open-source cross-platform desktop AI assistant app.",
  "author": "Soon Wang",
  "license": "MIT",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "dev:frontend": "vite",
    "build:frontend": "vite build",
    "tauri": "tauri",
    "format": "pnpm \"/format:/\"",
    "test": "pnpm \"/test:/\"",
    "format:frontend": "biome format . --write",
    "check:frontend": "biome check . --write",
    "lint:frontend": "biome lint . --write",
    "test:frontend": "vitest --run",
    "format:backend": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "check:backend": "cargo check --manifest-path src-tauri/Cargo.toml",
    "test:backend": "cargo test --manifest-path src-tauri/Cargo.toml",
    "release": "release-it",
    "postinstall": "lefthook install"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "dependencies": {
    "@solidjs/router": "^0.15.4",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/types": "^20.2.0",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^25.0.3",
    "jsdom": "^27.3.0",
    "lefthook": "^2.0.12",
    "release-it": "^19.1.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.16"
  }
}
